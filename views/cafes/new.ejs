<% layout('layouts/boilerplate') -%>
<div class="d-flex flex-column justify-content-center w-75 m-auto">
    <h1 class="text-center">New Cafe</h1>
       
    <form class=""action="/cafes" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3"> 
            <label class="form-label" for="name">Name</label>
            <input class="form-control" type="text" id="name" name="cafe[name]" required>
            <div class="invalid-feedback">
                Please enter name.
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="address">Address</label>
            <input class="form-control" type="text" id="address" name="cafe[address]" required>
            <div class="invalid-feedback">
                Please enter address.
            </div>
        </div>
        <div class="mb-3">
            <input type="file" name="image" id="" multiple>
        </div>
        <div class="mb-3">
            <label class="form-label" for="decription">Description</label>
            <textarea rows="3" class="form-control" type="text" id="description" name="cafe[description]" required></textarea>
            <div class="invalid-feedback">
                Please add a description.
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add Cafe</button>
        </form>  
</div>
