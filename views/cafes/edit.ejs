<% layout('layouts/boilerplate') -%>
    <div class="row">
        <div class="row">
            <h1 class="text-center">Edit Cafe</h1>
        <div class="col-6 offset-3">
            <form class="d-inline" action="/cafes/<%=cafe._id%>?_method=PUT" method="POST">
                <div class="mb-3"> 
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="cafe[name]" value="<%=cafe.name%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="address">Address</label>
                    <input class="form-control" type="text" id="address" name="cafe[address]" value="<%=cafe.address%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="text" id="image" name="cafe[image]" value="<%=cafe.image%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="decription">Description</label>
                    <textarea rows="3" class="form-control" type="text" id="description" name="cafe[description]"><%=cafe.description%></textarea>
                </div>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
                <a class="btn btn-secondary" href="/cafes/<%= cafe._id %>">Back</a>
            </div>
            </div>
        </div>