<% layout('layouts/boilerplate') -%>
    <h1>Edit Cafe</h1>
    <form action="/cafes/<%=cafe.id%>?_method=PUT" method="POST">
        <div>
            <label for="name">Name</label>
            <input type="text" id="name" name="cafe[name]" value="<%=cafe.name%>">
        </div>
        <div>
            <label for="address">Address</label>
            <input type="text" id="address" name="cafe[address]" value="<%=cafe.address%>">
        </div>
        <button>Add Cafe</button>
    </form>
